<h2>Edit movie</h2>

<form method='POST' action='/movies/{{movie._id}}'>
  <label for='title-input'>Movie title</label>
  <input
    id='title-input'
    type='text'
    name='title'
    placeholder='Movie Title'
    value='{{movie.title}}'
  />
  <label for='genre-input'>Genre</label>
  <input
    id='genre-input'
    type='text'
    name='genre'
    placeholder='Genre'
    value='{{movie.genre}}'
  />
  <label for='plot-input'>Plot</label>
  <input
    id='plot-input'
    type='text'
    name='plot'
    placeholder='Plot'
    value='{{movie.plot}}'
  />
  <button type='submit'>Edit movie</button>
</form>